<div>
    <nav>
        <button>New Budget</button>
        <button>New Category</button>
        <button>Logout</button>
    </nav>
    {{!-- modal space --}}
    <main>
        {{#if budget.income}}
    <div>
        <h1>Available</h1>
        <div>{{budget.income}}</div>
    </div>
    <div>
            {{#each categories as |category| }}
                <div>
                    <h2>
                        <a href="/category/{{category.id}}">{{category.category_name}}</a>
                    </h2>
                    <div>
                        {{category.assigned}}
                    </div>
                </div>
            {{/each}}
        </div>
        {{else}}
            <div>
                <p>Start a budget now by clicking the 'New Budget' button!</p>
            </div>
        {{/if}}
    </main>
    <aside>
        <div style="width: 200px;"><canvas id="budgetChart"></canvas></div>
        <script type="module" src="budgetChart.js"></script>
    </aside>
</div>