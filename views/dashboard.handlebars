<div class="homepage">
    <nav>
        <button id="new-budget">New Budget</button>
        <button id="new-category">New Category</button>
        <button id="logout">Logout</button>
    </nav>
    {{!-- modal space --}}
    <main>
        {{#if budget}}
            <div>
                <h1>Available</h1>
                <div id="budget-income">{{ budget.remainingBudget }}</div> <!-- Display remaining budget -->
            </div>
            <div>
                {{#each budget.categories as |category| }}
                    <div>
                        <h2>
                            <a href="/category/{{ category.id }}">{{ category.category_name }}</a>
                        </h2>
                        <div id="category-{{ category.id }}">
                            {{ category.available }}
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div>
                <p>Start a budget now by clicking the 'New Budget' button!</p>
            </div>
        {{/if}}
    </main>
    <aside>
        <div style="width: 200px;"><canvas id="budgetChart"></canvas></div>
        <script>
            const config = {
                type: 'doughnut',
                data: data,
                };
                const data = {
                    labels: [
                        'Red',
                        'Blue',
                        'Yellow'
                    ],
                    datasets: [{
                        label: 'My First Dataset',
                        data: [300, 50, 100],
                        backgroundColor: [
                        'rgb(255, 99, 132)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 205, 86)'
                        ],
                        hoverOffset: 4
                    }]
                    };
        </script>
    </aside>
</div>
